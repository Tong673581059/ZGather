<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".demo.SkinDemoActivity">

    <Button
        android:id="@+id/btn_change_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="换颜色"
        android:layout_margin="@dimen/gui_dimens_mid"
        skin:skinEnable="true"/>

    <Button
        android:id="@+id/btn_change_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextStyle_TCPrimary_Big"
        android:text="换肤"
        android:layout_margin="@dimen/gui_dimens_mid"
        skin:skinEnable="true"/>

    <Button
        android:id="@+id/btn_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="默认"
        android:layout_margin="@dimen/gui_dimens_mid"
        skin:skinEnable="true"/>
    <com.zcolin.gui.zrecyclerview.ZRecyclerView
        android:id="@+id/recyclerView"
        skin:skinEnable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.zcolin.gui.zrecyclerview.ZRecyclerView>

</LinearLayout>
